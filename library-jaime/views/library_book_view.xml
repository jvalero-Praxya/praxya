<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--formulario para libro-->
        <record id="library_book_form_view" model="ir.ui.view">
            <field name="name">Library Book form view</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Book form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="isbn"/>
                            <field name="category_id"/>
                            <field name="categ_count"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Vista tree-->
        <record id="library_book_tree_view" model="ir.ui.view">
            <field name="name">Library book tree</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree string="book tree" editable="bottom" delete="true">
                    <field name="name"></field>
                    <field name="description"></field>
                    <field name="isbn"></field>
                    <field name="category_id"></field>
                    <field name="categ_count"></field>
                </tree>
            </field>
        </record>

        <!--Action view-->
        <record id="action_library_book" model="ir.actions.act_window">
            <field name="name">Library book tree</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Crear nuevos libros
                </p>
            </field>

        </record>

        <!--Crear menÃºs-->
        <menuitem id="library_root" name="Library" sequence="0"/>
        <menuitem id="library_category_level" name="Library" sequence="1" parent="library_root"/>
        <menuitem id="library_book"
                  parent="library_category_level"
                  name="Book"
                  action="action_library_book"
                  sequence="1"/>
    </data>
</odoo>